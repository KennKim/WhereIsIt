<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tkkim.whereisit">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera2"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tkkim.whereisit.activity.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tkkim.whereisit.detail_stuff.DetailStuff"
            android:label="@string/activity_detail_stuff" />
        <activity
            android:name="com.tkkim.whereisit.detail_location.DetailLocation"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="@string/activity_detail_location" />
        <activity
            android:name="com.tkkim.whereisit.add_location.AddLocation"
            android:label="@string/activity_add_location" />
        <activity
            android:name="com.tkkim.whereisit.add_stuff.AddStuff"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/activity_add_stuff" />
        <activity
            android:name="com.tkkim.whereisit.add_stuff.ChoiceLocation"
            android:label="@string/activity_choice_location" />
        <activity
            android:name="com.tkkim.whereisit.activity.AboutUsActivity"
            android:label="@string/activity_title_about_us" />
        <activity
            android:name="com.tkkim.whereisit.activity.PrivacyPolicyActivity"
            android:label="@string/activity_title_privacy_policy" />
    </application>

</manifest>